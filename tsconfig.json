{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,

    /* Modules */
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* Emit */
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
